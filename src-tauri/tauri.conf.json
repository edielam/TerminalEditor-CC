{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3030",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "CortexCode",
    "version": "0.2.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "open": true,
        "all": true,
        "execute": true,
        "sidecar": true,
        "scope": [
          {
            "name": "sh",
            "cmd": "sh",
            "args": ["-c", { "validator": "\\S+" }]
          },
          {
            "name": "cmd",
            "cmd": "cmd",
            "args": ["/C", { "validator": "\\S+" }]
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.edd.cortexcode",
      "longDescription": "",
      
      "resources": ["config.toml"],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "CortexCode Node 2",
        "width": 1000
      }
    ]
  }
}
